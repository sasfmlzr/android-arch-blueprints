<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <EditText
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dialog_title_margin_start"
        android:layout_marginTop="@dimen/dialog_title_margin_top"
        android:layout_marginEnd="@dimen/dialog_title_margin_end"
        android:layout_marginBottom="@dimen/dialog_title_margin_bottom"
        android:autofillHints=""
        android:hint="@string/title"
        android:inputType="text" />

    <EditText
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dialog_description_margin_start"
        android:layout_marginTop="@dimen/dialog_description_margin_top"
        android:layout_marginEnd="@dimen/dialog_description_margin_end"
        android:layout_marginBottom="@dimen/dialog_description_margin_bottom"
        android:autofillHints=""
        android:hint="@string/description"
        android:inputType="text" />
</LinearLayout>
